---
import "@/styles/global.css";
import { SEO } from "astro-seo";

interface Props {
	title?: string;
	description?: string | undefined;
}
const { title = "dshaw0004", description = "my personal website" } =
	Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/its-d32.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Preconnect to Google Fonts for better performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Fonts: Inter for body text and headings -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
		<SEO
			charset="UTF-8"
			title={title}
			titleDefault="Dipankar Shaw's Portfolio"
			description={description}
			openGraph={{
				basic: {
					title: "Dipankar Shaw",
					image: "/its-d32.png",
					type: "website",
				},
				image: {
					url: "/its-d128.png",
					height: 360,
					width: 360,
					alt: "dshaw0004",
				},
				optional: {
					description: description,
					locale: "en-IN",
					siteName: "dshaw0004",
				},
			}}
			twitter={{
				creator: "@dshaw0004",
			}}
			extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/its-d32.png", type: "image/png" }],
				// extending the default meta tags
				// meta: [
				//   {
				//     name: "twitter:image",
				//     content: "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
				//   },
				//   { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
				//   { name: "twitter:description", content: "Agent" },
				// ],
			}}
		/>
	</head>
	<body class="dark">
		  <div aria-hidden="true" class="background-text-container">
    <style>
      .background-text-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
        z-index: -10;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .background-text{
        font-family:  Courier, monospace;
        white-space: nowrap;
        font-size: 20rem;
        color: rgba(69, 69, 69, 0.1);
        font-weight: bold;
        background: linear-gradient(rgba(69, 69, 69, 0.1), transparent);
        filter: blur(5px);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
      }

      @media (max-width: 768px) {
        .background-text {
          font-size: 10rem;
        }
      }
    </style>
    <p class="background-text">dshaw</p>
  </div>
		<slot />
		<style is:global>
			body {
				position: relative;
			}

			:root {
				color-scheme: light dark;
				/* color: #ffffffde; */
				/* background-color: #242424; */
				font-synthesis: none;
				text-rendering: optimizeLegibility;
			}
			html {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
				/* background: #13151a; */
				background-size: 224px;
				/* background: var(--accent-dark-gradient) no-repeat; */
			}
			
			/* Typography hierarchy */
			h1, h2, h3, h4, h5, h6 {
				font-family: 'Inter', sans-serif;
				font-weight: 700;
				line-height: 1.2;
				letter-spacing: -0.02em;
			}
			
			h1 {
				font-size: clamp(2rem, 5vw, 3.5rem);
				font-weight: 800;
			}
			
			h2 {
				font-size: clamp(1.75rem, 4vw, 2.5rem);
				font-weight: 700;
			}
			
			h3 {
				font-size: clamp(1.5rem, 3vw, 2rem);
				font-weight: 600;
			}
			
			h4 {
				font-size: clamp(1.25rem, 2.5vw, 1.5rem);
				font-weight: 600;
			}
			
			p, li {
				font-family: 'Inter', sans-serif;
				font-weight: 400;
				line-height: 1.7;
				font-size: clamp(0.95rem, 1.5vw, 1.1rem);
			}
			
			code {
				font-family: 'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace;
				font-weight: 500;
			}
			
			strong, b {
				font-weight: 600;
			}
			
			.section {
				height: 100vh;
				height: 100dvh;
				padding-top: 2rem;
			}
		</style>
        <script>
        window.onload = function () {
                const pathname = window.location.pathname;
                const platform = navigator.platform;
                fetch('https://dapi-0rv5.onrender.com/v1/analytics/visit-records', {
                        mode: 'no-cors',
                        method: 'POST',
                        headers: {
                                'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({path: pathname, platform: platform})
                })// this fetch is registering the visit in the backend.
        }
</script>
	</body>
</html>
