---
// Skeleton Loader component for images
interface Props {
  aspectRatio?: string;
  borderRadius?: string;
  className?: string;
}

const { 
  aspectRatio = "16/9", 
  borderRadius = "12px",
  className = ""
} = Astro.props;
---

<div class={`skeleton-loader ${className}`} data-skeleton>
  <div class="skeleton-shimmer"></div>
</div>

<style define:vars={{ aspectRatio, borderRadius }}>
  .skeleton-loader {
    position: relative;
    aspect-ratio: var(--aspectRatio);
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    border-radius: var(--borderRadius);
    overflow: hidden;
    width: 100%;
  }

  :global(body.light) .skeleton-loader {
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.05) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, 0.05) 100%
    );
  }

  .skeleton-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
    animation: shimmer 2s infinite;
  }

  :global(body.light) .skeleton-shimmer {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 0, 0, 0.1) 50%,
      transparent 100%
    );
  }

  @keyframes shimmer {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  /* Hide skeleton when image is loaded */
  :global(.skeleton-hidden) {
    display: none;
  }
</style>
