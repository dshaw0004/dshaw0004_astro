---
import { getCollection } from "astro:content";
import Footer from "@/components/Footer.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import Header from "@/components/Header.astro";
import Layout from "@/layouts/Layout.astro";
import SkeletonLoader from "@/components/SkeletonLoader.astro";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="My Blogs" description="Here is few blogs written by me">
	<Header title="My Blogs" />
  <main class="w-full">
    <section class="w-[80%] lg:w-[60%] mx-auto">
			<ul>
				{
					posts.map((post) => (
						<li>
							<a href={`/blog/${post.slug}/`}>
								<img
									width={720}
									height={360}
									src={post.data.heroImage}
									alt={`Cover image for ${post.data.title}`}
									loading="lazy"
								/>
								<h4 class="title">{post.data.title}</h4>
								<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</main>
	<Footer />
	<script>
		// Hide skeleton loaders when images load
		document.addEventListener('DOMContentLoaded', () => {
			const images = document.querySelectorAll('.blog-image');
			images.forEach((img) => {
				if (img instanceof HTMLImageElement) {
					const container = img.closest('.image-container');
					const skeleton = container?.querySelector('[data-skeleton]');
					
					if (img.complete) {
						skeleton?.classList.add('skeleton-hidden');
						img.style.display = 'block';
					} else {
						img.style.display = 'none';
						img.addEventListener('load', () => {
							skeleton?.classList.add('skeleton-hidden');
							img.style.display = 'block';
						});
					}
				}
			});
		});
	</script>
	<style>
		ul {
			display: flex;
			flex-wrap: wrap;
			gap: 2rem;
			list-style-type: none;
			margin: 0;
			padding: 0;
		}
		.image-container {
			position: relative;
			width: 100%;
		}
		.blog-image {
			width: 100%;
			display: block;
		}
		ul li {
			width: calc(50% - 1rem);
		}
		ul li * {
			text-decoration: none;
			transition: 0.2s ease;
		}
		ul li:first-child {
			width: 100%;
			margin-bottom: 1rem;
			text-align: center;
		}
		ul li:first-child img {
			width: 100%;
		}
		ul li:first-child .title {
			font-size: 2.369rem;
		}
		ul li img {
			margin-bottom: 0.5rem;
			border-radius: 12px;
		}
		ul li a {
			display: block;
		}
		.title {
			margin: 0;
			color: rgb(var(--fg-dark));
			line-height: 1;
		}
		.date {
			margin: 0;
			color: rgb(var(--gray));
		}
		ul li a:hover h4,
		ul li a:hover .date {
			color: rgb(var(--accent));
		}
		ul a:hover img {
			box-shadow: var(--box-shadow);
		}
		@media (max-width: 720px) {
			ul {
				gap: 0.5em;
			}
			ul li {
				width: 100%;
				text-align: center;
			}
			ul li:first-child {
				margin-bottom: 0;
			}
			ul li:first-child .title {
				font-size: 1.563em;
			}
		}
	</style>
</Layout>
