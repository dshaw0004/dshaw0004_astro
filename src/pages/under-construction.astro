---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/under-construction.css";
/*
<div class="construction-icon">
    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
</div>
<p class="construction-message">We're working hard to bring you something amazing! This page is currently under development.</p>
<div class="construction-details">
    <p>Expected completion: <span class="highlight">Coming Soon</span></p>
    <p>Status: <span class="highlight">In Development</span></p>
</div>
*/
---

<Layout>
    <Header title="Under Construction" />
    <main class="construction-page">
        <div class="construction-container">
            <h1>Under Construction</h1>
            <p class="subtitle">We're working hard to bring you something amazing!</p>
            
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" class="construction-animation">
                <!-- Background -->
                <rect width="400" height="300" fill="transparent" rx="10" ry="10"/>
                
                <!-- Server/Endpoint Icon -->
                <g id="server">
                    <rect x="150" y="70" width="100" height="120" rx="5" ry="5" fill="#e9ecef" stroke="#ced4da" stroke-width="2"/>
                    <line x1="150" y1="100" x2="250" y2="100" stroke="#ced4da" stroke-width="2"/>
                    <line x1="150" y1="130" x2="250" y2="130" stroke="#ced4da" stroke-width="2"/>
                    <line x1="150" y1="160" x2="250" y2="160" stroke="#ced4da" stroke-width="2"/>
                    <circle cx="175" cy="85" r="5" fill="#6c757d"/>
                    <rect x="190" y="82" width="20" height="6" rx="2" ry="2" fill="#6c757d"/>
                    <circle cx="175" cy="115" r="5" fill="#6c757d"/>
                    <rect x="190" y="112" width="20" height="6" rx="2" ry="2" fill="#6c757d"/>
                    <circle cx="175" cy="145" r="5" fill="#6c757d"/>
                    <rect x="190" y="142" width="20" height="6" rx="2" ry="2" fill="#6c757d"/>
                    <circle cx="175" cy="175" r="5" fill="#6c757d"/>
                    <rect x="190" y="172" width="20" height="6" rx="2" ry="2" fill="#6c757d"/>
                </g>
                
                <!-- Construction Elements -->
                <g id="construction">
                    <!-- Gear -->
                    <g id="gear" transform="translate(200, 130)">
                        <circle cx="0" cy="0" r="35" fill="none" stroke="#6c757d" stroke-width="3"/>
                        <g id="teeth">
                            <rect x="-4" y="-43" width="8" height="12" fill="#6c757d"/>
                            <rect x="-4" y="31" width="8" height="12" fill="#6c757d"/>
                            <rect x="31" y="-4" width="12" height="8" fill="#6c757d"/>
                            <rect x="-43" y="-4" width="12" height="8" fill="#6c757d"/>
                            
                            <rect x="18" y="-40" width="8" height="12" transform="rotate(30)" fill="#6c757d"/>
                            <rect x="-26" y="18" width="8" height="12" transform="rotate(30)" fill="#6c757d"/>
                            <rect x="18" y="28" width="8" height="12" transform="rotate(-30)" fill="#6c757d"/>
                            <rect x="-26" y="-40" width="8" height="12" transform="rotate(-30)" fill="#6c757d"/>
                        </g>
                        <circle cx="0" cy="0" r="15" fill="#6c757d"/>
                        <animateTransform 
                            attributeName="transform" 
                            type="rotate" 
                            from="0 200 130" 
                            to="360 200 130" 
                            dur="20s" 
                            repeatCount="indefinite"/>
                    </g>
                    
                    <!-- Wrench -->
                    <g id="wrench">
                        <path d="M270,170 L310,120 C320,110 315,95 305,95 C295,95 290,105 295,115 L260,160 Z" fill="#495057"/>
                        <animateTransform 
                            attributeName="transform" 
                            type="rotate" 
                            values="0 200 130; 20 200 130; 0 200 130" 
                            dur="4s" 
                            repeatCount="indefinite"/>
                    </g>
                    
                    <!-- Code Brackets -->
                    <g id="code">
                        <path d="M110,125 L90,145 L110,165" fill="none" stroke="#0d6efd" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M290,125 L310,145 L290,165" fill="none" stroke="#0d6efd" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                    </g>
                </g>
                
                <!-- Status Indicators -->
                <g id="status-indicators">
                    <circle cx="150" cy="220" r="5" fill="#ffc107">
                        <animate attributeName="opacity" values="1;0.3;1" dur="1.5s" repeatCount="indefinite"/>
                    </circle>
                    <circle cx="170" cy="220" r="5" fill="#ffc107">
                        <animate attributeName="opacity" values="1;0.3;1" dur="1.5s" begin="0.5s" repeatCount="indefinite"/>
                    </circle>
                    <circle cx="190" cy="220" r="5" fill="#ffc107">
                        <animate attributeName="opacity" values="1;0.3;1" dur="1.5s" begin="1s" repeatCount="indefinite"/>
                    </circle>
                </g>
                
                <!-- Text -->
                <g id="text">
                    <text x="200" y="230" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#212529">Endpoint Under Development</text>
                    <text x="200" y="255" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#6c757d">We're working on it! Please check back soon.</text>
                </g>
            </svg>

            <a href="/" class="back-home">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                Back to Home
            </a>
        </div>
    </main>
    <Footer />
</Layout> 